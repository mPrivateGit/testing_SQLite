<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aprivate.sqlite.util.AddContact">

    <EditText
        android:id="@+id/set_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/set_first_name"
        android:inputType="text"/>
    <EditText
        android:id="@+id/set_second_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/set_second_name"
        android:inputType="text"/>
    <EditText
        android:id="@+id/set_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/set_phone_number"
        android:inputType="phone"/>
    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/add_button"/>


</LinearLayout>
